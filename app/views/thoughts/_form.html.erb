<%= form_for @thought, :html => {:multipart => true, 'role' => "form"} do |f| %>
  <% if @thought.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@thought.errors.count, "error") %> prohibited this thought from being saved:</h2>

      <ul>
      <% @thought.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :sharecount, :value => "0" %>
  <div class="field">
    <%= f.text_field :email, :placeholder => "Your email" %>
  </div>
  <div class="field">
    <%= f.text_field :url, :placeholder => "Link url" %>
  </div>
  <div class="field">
    <%= f.text_area :thought, :placeholder => "Your thoughts...", :rows => "4" %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
